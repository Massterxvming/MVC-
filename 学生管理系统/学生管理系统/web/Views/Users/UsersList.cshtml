@model List<DBA.Model.Users>


    <table class="table">
    	<thead>
    	<tr>
        <th>序号<i class="sort"></th>
         
        <th>学号</th>
           
            <th>姓名</th>
            <th>性别</th>
            <th>年龄</th>
             <th>班级</th>
        <th>操作</th>
        </tr>
        </thead>
        <tbody>
              @if (Model != null && Model.Count > 0)
{
    int i = 0; 
            foreach (var item in Model)
        {
            i++;    
        <tr>
        <td>@i</td>
             
       
            <td>@item.LoginName</td>
          
             <td>@item.UserName</td>
             <td>@item.Sex</td>
            <td>@item.Age</td>
             <td>@item.Str1</td>
        <td><a href="/Users/Create?ID=@item.ID"   >修改</a> 
            <a href="#" onclick="Del(@item.ID)"   >删除</a> 
           
        </td>
        </tr>    
            }
} 
        </tbody>
    </table>
    


    

