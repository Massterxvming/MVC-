@model List<DBA.Model.Teacher>


    <table class="table">
    	<thead>
    	<tr>
        <th>序号<i class="sort"><img src="/Content/images/px.gif" /></i></th>
        <th>姓名</th>
 <th>擅长课程</th>
             <th>职称</th>
           
            
        <th>操作</th>
        </tr>
        </thead>
        <tbody>
              @if (Model != null && Model.Count > 0)
{
    int i = 0; 
       
            foreach (var item in Model)
        {
            i++;    
        <tr>
        <td>@i</td>
        <td>@item.TeacherName</td>
             
              <td>@item.Course</td>
              <td>@item.Title</td>
           
             
        <td><a href="/Teacher/Create?ID=@item.ID"   >修改</a> 
            <a href="#" onclick="Del(@item.ID)"   >删除</a> 
           
        </td>
        </tr>    
            }
} 
        </tbody>
    </table>
    


    

